{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["nativewind/types"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"],
      "typeRoots": ["./node_modules/@types", "./types"]
    }
  },
  "typeRoots": ["./types"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/env.d.ts",
    "services/**/*.ts"
  ]
}
